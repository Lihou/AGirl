<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.lihou.agirl">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name=".GirlApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AGirl">
        <meta-data
            android:name="com.android.lihou.agirl.utils.OkHttpGlideModule"
            android:value="GlideModule" />
        <activity android:name=".ui.girls.GirlsActivity"
            android:theme="@style/AGirl.Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.daily.DailyActivity"
            android:theme="@style/AGirl.Detail">
        </activity>

    </application>

</manifest>